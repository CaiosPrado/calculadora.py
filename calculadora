def somar(numero1, numero2):
    print(f'Realizando soma de {n1} + {n2}')
    return numero1 + numero2



def subtrair(numero1, numero2):
    print(f'Realizando subtração de {n1} - {n2}')
    return numero1 - numero2


def dividir(numero1, numero2):
    print(f'Realizando divisão de {n1} / {n2}')
    return numero1 / numero2


def multiplicar(numero1, numero2):
    print(f'Realizando multiplicação de {n1} * {n2}')
    return numero1 * numero2

n1 = float(input('Digite o primeiro número: '))
n2 = float(input('Digite o segundo número: '))
operador = str(input('Qual operação matemática você desejaria? (+, -, /, *) '))

resultado = 0
if operador == '+':
    resultado = somar(n1,n2)
elif operador == '-':
    resultado = subtrair(n1,n2)
elif operador == '/':
    resultado = dividir(n1,n2)
elif operador == '*':
    resultado = multiplicar(n1,n2)
else:
    print('Operação inválida')

print(f'O valor dessa operação é {resultado}')
